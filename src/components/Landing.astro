---
import { SalesButton } from "./SalesButton";
---

<article
  class="absolute w-full h-full z-50 flex items-center justify-center
    text-zinc-100 flex-col"
>
  <div class="flex flex-col items-center text-5xl font-semibold mb-4">
    <a href="#">
      <img
        src="src/img/logoalta_6.webp"
        alt="Lee por Pull and Bear"
        class="h-32"
      />
    </a>
  </div>
  <div class="flex items-center flex-wrap gap-4 justify-center max-w-[600px]">
    <SalesButton href={1}> Buy </SalesButton>
  </div>
</article>
<section class="h-screen w-screen relative overflow-hidden">
  <video
    muted
    autoplay
    loop
    src="src/video/pull-and-bear-video.mp4"
    class="object-cover w-full h-full"></video>
</section>
