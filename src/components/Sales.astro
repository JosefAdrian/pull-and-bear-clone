  <div class="flex items-center flex-wrap gap-4 justify-center max-w-[600px]">
    <SalesButton href={1}> Jeans </SalesButton>
    <SalesButton href={1}> Hoddies </SalesButton>
    <SalesButton href={1}> Jackets </SalesButton>
    <SalesButton href={1}> T-shirts </SalesButton>
    <SalesButton href={1}> Shoes </SalesButton>
